<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: #f3f4f6;
            font-family: 'Arial', sans-serif;
            transition: background 0.3s ease;
        }
    
        .glassmorphic-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            width: 400px;
            padding: 30px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            animation: float 5s ease-in-out infinite;
        }
    
        @keyframes float {
    
            0%,
            100% {
                transform: translateY(0);
            }
    
            50% {
                transform: translateY(-10px);
            }
        }
    
        .profile-card {
            text-align: center;
            padding-left: 20px;
            padding-right: 20px;
        }
    
        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin: 20px auto;
            border: 8px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 0 12px rgba(255, 255, 255, 0.3);
            animation: pulse 2s infinite;
        }
    
        @keyframes pulse {
            0% {
                transform: scale(0.95);
                box-shadow: 0 0 0 12px rgba(255, 255, 255, 0.3);
            }
    
            50% {
                transform: scale(1);
                box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
            }
    
            100% {
                transform: scale(0.95);
                box-shadow: 0 0 0 12px rgba(255, 255, 255, 0.3);
            }
        }
    
        .username {
            font-size: 30px;
            margin: 10px 0;
            color: #4c4cff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: neon 1.5s ease-in-out infinite alternate;
        }
    
        @keyframes neon {
            from {
                text-shadow: 0 0 5px #fff, 0 0 10px #fff, 0 0 15px #fff, 0 0 20px #4c4cff, 0 0 35px #4c4cff, 0 0 40px #4c4cff, 0 0 50px #4c4cff;
            }
    
            to {
                text-shadow: 0 0 10px #fff, 0 0 15px #fff, 0 0 20px #fff, 0 0 30px #4c4cff, 0 0 40px #4c4cff, 0 0 50px #4c4cff, 0 0 60px #4c4cff;
            }
        }
    
        .user-bio {
            color: #666;
            margin: 5px 0;
        }
    
        .nav-links {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
        }
    
        .nav-links a {
            text-decoration: none;
            color: #4c4cff;
            padding: 8px 16px;
            border-radius: 20px;
            background-color: rgba(76, 76, 255, 0.1);
            box-shadow: 0 0 10px rgba(76, 76, 255, 0.3);
            transition: background-color 0.3s ease;
            margin: 0 10px;
        }
    
        .nav-links a:hover {
            background-color: rgba(76, 76, 255, 0.3);
        }
    
        .skills {
            text-align: left;
            margin-top: 20px;
        }
    
        .skill {
            display: flex;
            flex-direction: column;
            margin-bottom: 15px;
        }
    
        .skill-name {
            color: #4c4cff;
            margin-bottom: 5px;
        }
    
        .skill-bar {
            width: 100%;
            background-color: #f0f0f0;
            border-radius: 5px;
            overflow: hidden;
        }
    
        .skill-level {
            height: 10px;
            background-color: #4c4cff;
            transition: width 0.5s ease;
        }
    
        #mode-switch {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #4c4cff;
            color: #fff;
            margin-top: 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
    
        #mode-switch:hover {
            background-color: #7878ff;
        }
    .dark-mode {
    background: #0a0a0a;
    color: #fff;
}

.dark-mode .profile-card {
    background: rgba(0, 0, 0, 0.8);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.6);
    border: none;
}

.dark-mode .profile-picture {
    box-shadow: 0 0 0 12px rgba(0, 0, 0, 0.3);
}

.dark-mode .username {
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

.dark-mode .user-bio {
    color: #bbb;
}

.dark-mode .nav-links a,
.dark-mode .skill-name {
    color: #fff;
}

.dark-mode .nav-links a {
    background-color: rgba(76, 76, 255, 0.1);
    box-shadow: 0 0 10px rgba(76, 76, 255, 0.3);
}

.dark-mode .nav-links a:hover {
    background-color: rgba(76, 76, 255, 0.3);
}

    </style>
  </head>
  <body>
   
    <div class="glassmorphic-container">
        <div class="profile-card">
            <img src="https://icons.veryicon.com/png/o/business/multi-color-financial-and-business-icons/user-139.png"
                alt="Profile Picture Day" class="profile-picture" id="profile-picture-day">
            <img src="https://icons.veryicon.com/png/o/business/multi-color-financial-and-business-icons/user-139.png"
                alt="Profile Picture Night" class="profile-picture" id="profile-picture-night" style="display: none;">
            <h2 class="username">Guest 001+</h2>
            <p class="user-bio">Web Developer of MindLink</p>
            <ul class="nav-links">
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
            <div class="skills">
                <h3>Skills</h3>
                <div class="skill">
                    <div class="skill-name">HTML</div>
                    <div class="skill-bar">
                        <div class="skill-level" style="width: 80%;"></div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-name">CSS</div>
                    <div class="skill-bar">
                        <div class="skill-level" style="width: 75%;"></div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-name">JavaScript</div>
                    <div class="skill-bar">
                        <div class="skill-level" style="width: 90%;"></div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-name">React</div>
                    <div class="skill-bar">
                        <div class="skill-level" style="width: 85%;"></div>
                    </div>
                </div>
                <div class="skill">
                    <div class="skill-name">Node.js</div>
                    <div class="skill-bar">
                        <div class="skill-level" style="width: 70%;"></div>
                    </div>
                </div>
            </div>
            <button id="mode-switch">Midnight Mode</button>
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        const modeSwitch = document.getElementById('mode-switch');
        const profilePictureDay = document.getElementById('profile-picture-day');
        const profilePictureNight = document.getElementById('profile-picture-night');
        let isNightMode = false;

        modeSwitch.addEventListener('click', () => {
            isNightMode = !isNightMode;
            if (isNightMode) {
                document.body.style.background = '#0a0a0a';
                modeSwitch.textContent = 'Modo DÃ­a';
                profilePictureDay.style.display = 'none';
                profilePictureNight.style.display = 'block';
                document.documentElement.classList.add('dark-mode');
            } else {
                document.body.style.background = '#f3f4f6';
                modeSwitch.textContent = 'Modo Noche';
                profilePictureDay.style.display = 'block';
                profilePictureNight.style.display = 'none';
                document.documentElement.classList.remove('dark-mode');
            }
        });

        const skills = document.querySelectorAll('.skill-level');
        skills.forEach(skill => {
            const skillLevel = skill.style.width;
            skill.style.width = '0';
            setTimeout(() => {
                skill.style.width = skillLevel;
            }, 500);
        });
    </script>

  </body>
</html>